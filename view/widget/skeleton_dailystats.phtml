<?php
use Application\Controller\CoreController;
use Laminas\ServiceManager\Exception\ServiceNotFoundException;
use Laminas\Db\Sql\Select;
use OnePlace\Skeleton\Model\SkeletonTable;

try {
    # Load Skeleton Requests from Database
    $oSkeletonTbl = CoreController::$oServiceManager->get(SkeletonTable::class);
    $iCountLive = count($oSkeletonTbl->fetchAll(false));

    # Get Stats
    $oStatSel = new Select(CoreController::$aCoreTables['core-statistic']->getTable());
    $oStatSel->order('date ASC');
    $oStatSel->where(['stats_key'=>'skeleton-daily']);
    $oStatSel->limit(30);
    $oRecentStats = CoreController::$aCoreTables['core-statistic']->selectWith($oStatSel);
} catch(ServiceNotFoundException $e) {

}
